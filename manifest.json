{
    "name": "Gittify",
    "short_name": "Gittify",
    "description": "Use this extension to save your links to your GitHub repo. You can also save a local copy (text only) of the saved link if it's a web page or the whole file.",
    "version": "1.0.0",
    "background": {
        "scripts": [
            "scripts/jquery.min.js",
            "scripts/widget.js",
            "scripts/to-markdown.js"
        ]
    },
    "icons": {
        "16": "icons/standard-16.png",
        "48": "icons/standard-48.png",
        "64": "icons/standard-64.png",
        "128": "icons/standard-128.png"
    },
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "browser_action": {
        "default_title": "Gittify",
        "default_icon": "icons/standard-16.png"
    },
    "manifest_version": 2,
    "homepage_url": "http://github.com/ale46",
    "options_page": "options.html"
}